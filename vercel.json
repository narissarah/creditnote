{
  "buildCommand": "npm run vercel-build",
  "framework": "remix",
  "functions": {
    "app/routes/**/*.tsx": {
      "maxDuration": 30
    },
    "app/entry.server.tsx": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"],
  "installCommand": "npm install --legacy-peer-deps"
}

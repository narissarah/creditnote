{
  "regions": ["iad1"],
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install",
  "framework": "remix",
  "functions": {
    "app/routes/**": {
      "runtime": "nodejs20.x"
    },
    "build/server/**": {
      "runtime": "nodejs20.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://admin.shopify.com https://*.myshopify.com;"
        }
      ]
    }
  ]
}

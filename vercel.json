{
  "buildCommand": "rm -rf build dist .vercel .next && npm run vercel-build",
  "outputDirectory": "build/client", 
  "framework": "remix",
  "installCommand": "rm -rf node_modules && npm install --legacy-peer-deps --no-cache",
  "env": {
    "VERCEL_FORCE_NO_BUILD_CACHE": "1",
    "BUILD_ID": "nuclear-rebuild-20250906"
  },
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api"
    }
  ]
}
{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "build/client",
  "framework": "remix",
  "installCommand": "npm install --legacy-peer-deps",
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/build/(.*)",
      "dest": "/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api"
    }
  ]
}